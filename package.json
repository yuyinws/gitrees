{
  "name": "gitrees",
  "type": "module",
  "version": "0.1.8",
  "description": "Organize your local git repositories in a tree structure.",
  "author": "yuyinws",
  "license": "MIT",
  "homepage": "https://github.com/yuyinws/gitrees#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yuyinws/gitrees.git"
  },
  "bugs": "https://github.com/yuyinws/gitrees/issues",
  "keywords": [
    "git",
    "cli"
  ],
  "sideEffects": false,
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*"
      ]
    }
  },
  "bin": {
    "gt": "./bin/gt.mjs"
  },
  "files": [
    "bin",
    "dist"
  ],
  "scripts": {
    "build": "unbuild",
    "dev": "unbuild --stub",
    "lint": "eslint .",
    "prepublishOnly": "nr build",
    "release": "bumpp && npm publish",
    "start": "esno src/index.ts",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "prepare": "simple-git-hooks"
  },
  "dependencies": {
    "@clack/prompts": "^0.7.0",
    "citty": "^0.1.5",
    "clipboardy": "^4.0.0",
    "colorette": "^2.0.20",
    "execa": "^8.0.1",
    "pathe": "^1.1.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.4.0",
    "@antfu/ni": "^0.21.12",
    "@antfu/utils": "^0.7.6",
    "@types/node": "^20.10.4",
    "bumpp": "^9.2.0",
    "eslint": "^8.55.0",
    "esno": "^4.0.0",
    "lint-staged": "^15.2.0",
    "pnpm": "^8.11.0",
    "rimraf": "^5.0.5",
    "simple-git-hooks": "^2.9.0",
    "typescript": "^5.3.3",
    "unbuild": "^2.0.0",
    "vite": "^5.0.6",
    "vitest": "^1.0.2"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
